- var j = function (o) { return JSON.stringify(o); }
- var appName = 'kibana';

block vars

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    meta(name='description', content='Bitergia analytics for __PROJECT__ provided by Bitergia using GrimoireLab Open Source technology')
    title Bitergia Analytics
    block head
  body(kbn-chrome, id='#{appName}-body')
    script window.__KBN__ = !{j(kibanaPayload)};
    block content
